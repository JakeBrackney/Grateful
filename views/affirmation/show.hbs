  <form action="/affirmation/new" method="GET">
    <input type="submit" value="New Affirmation" class="button" />
  </form>

  <form action="/user/show" method="GET">
    <input type="submit" value="Back" class="button" />
  </form>

</div>
{{!-- {{log affirmations}}
{{log 'wat'}} --}}
{{!-- populate 3 random affirmations --}}
<section class="profile">
  {{#if affirmations}}
    <ul class="items">
      {{#each affirmations}}
        <li>
          {{this.text}}
          <a href="edit/{{this.id}}" class="edit" method='GET'>Edit</a>
          <a href="edit/{{this.id}}" class="edit" method='GET'>Delete</a>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <h3>No affirmations yet!</h3>
  {{/if}}
</section>





