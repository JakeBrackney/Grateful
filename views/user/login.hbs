<h1>Log In</h1>

<section class="row">
  
  {{#if message}}
    <p class="alert">{{message}}</p>
  {{/if}}

  <form action="" method="POST" class="auth-form">
    <p class="input-field">
      <input type="username" name="email" placeholder="email" class="input-field">
    </p>

    <p class="input-field">
      <input type="password" name="password" placeholder="password" class="input-field">
    </p>

    <p class="input-field">
      <input type="submit" value="Log In" class="button">
    </p>

  </form>

</section>